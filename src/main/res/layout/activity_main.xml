<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="5dp"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@drawable/sensors_background"
		android:padding="5dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:contentDescription="@string/accelerometer"
			android:src="@drawable/accelerometer"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/accelerometer_vendor"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:layout_marginLeft="10dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_marginRight="10dp">

				<TextView
					android:id="@+id/accelerometer_frequency_text"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:gravity="center_vertical"
					android:layout_alignParentRight="true"/>

				<SeekBar
					android:id="@+id/accelerometer_frequency"
					android:layout_width="match_parent"
					android:layout_toLeftOf="@+id/accelerometer_frequency_text"
					android:layout_height="30dp"/>
			</RelativeLayout>


		</LinearLayout>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@drawable/sensors_background"
		android:padding="5dp"
		android:layout_marginTop="5dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:contentDescription="@string/gyroscope"
			android:src="@drawable/gyroscope"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/gyroscope_vendor"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:layout_marginLeft="10dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_marginRight="10dp">

				<TextView
					android:id="@+id/gyroscope_frequency_text"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:gravity="center_vertical"
					android:layout_alignParentRight="true"/>

				<SeekBar
					android:id="@+id/gyroscope_frequency"
					android:layout_width="match_parent"
					android:layout_toLeftOf="@+id/gyroscope_frequency_text"
					android:layout_height="30dp"/>
			</RelativeLayout>


		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@drawable/sensors_background"
		android:padding="5dp"
		android:layout_marginTop="5dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:contentDescription="@string/magnetometer"
			android:src="@drawable/magnetometer"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/magnetometer_vendor"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:layout_marginLeft="10dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_marginRight="10dp">

				<TextView
					android:id="@+id/magnetometer_frequency_text"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:gravity="center_vertical"
					android:layout_alignParentRight="true"/>

				<SeekBar
					android:id="@+id/magnetometer_frequency"
					android:layout_width="match_parent"
					android:layout_toLeftOf="@+id/magnetometer_frequency_text"
					android:layout_height="30dp"/>
			</RelativeLayout>


		</LinearLayout>
	</LinearLayout>


	<TextView
		android:id="@+id/timer"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:textSize="32sp"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:text="@string/default_counter"/>


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<ImageView
			android:id="@+id/start_pause"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:background="@drawable/start_button"
			android:contentDescription="@string/start"
			android:layout_centerInParent="true"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginTop="20dp"
		android:background="#FFFFFF"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/send"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/send"
			android:gravity="center"
			android:textColor="@drawable/text_button_color"
			android:enabled="false"
			android:textSize="24sp"/>

		<TextView
			android:id="@+id/save"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/save"
			android:gravity="center"
			android:textColor="@drawable/text_button_color"
			android:enabled="false"
			android:textSize="24sp"/>


		<TextView
			android:id="@+id/reset"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/reset"
			android:gravity="center"
			android:textColor="@drawable/text_button_color"
			android:enabled="false"
			android:textSize="24sp"/>
	</LinearLayout>

</LinearLayout>



